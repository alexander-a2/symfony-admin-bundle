{% extends '@Admin/layout/entity.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block page_content %}
    <div id="admin-entity-crud-edit-form">
        {{ form_start(form) }}
        <div style="max-width:600px">
            <table id="admin-entity-view-table" class="table table-bordered table-hover bg-white">
                {% for child in form.children %}
                    <tr>
                        <td class="text-secondary" width="200"><b>{{ form_label(child) }}</b></td>
                        <td>{{ form_widget(child) }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
